<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CardViewStyle" parent="CardView.Light">
        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">1dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>


    <style name="TextViewStyle_Value" parent="AppTheme">
        <item name="android:textAppearance">@style/TextAppearanceTextView_Value</item>
    </style>

    <style name="TextViewStyle_Title" parent="AppTheme">
        <item name="android:textAppearance">@style/TextAppearanceTextView_Title</item>
    </style>


    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearanceTextView_Button</item>
    </style>



    <style name="TextAppearanceTextView_Value" parent="TextAppearance.AppCompat">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>
    <style name="TextAppearanceTextView_Title" parent="TextAppearance.AppCompat">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="TextAppearanceTextView_Button" parent="TextAppearance.AppCompat">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
